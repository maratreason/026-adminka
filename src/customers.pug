extends pug/base

append content
  .top
    include pug/includes/sitebar
    include pug/includes/header

  main
    .container
      .section-content
        h2.section-content__title.title Заказчики
          span.section-content__title-nums 4

        .section-content__selects-list.selects-list
          .search-input
            img.search-input__btn(src="images/icons/ui/search-input.svg" alt="")
            input(placeholder="Поиск по названию")

          .select(data-select)
            .select__current
              span.select__current-text Исследования
              .btn-dropdown__icon
                img(src="images/icons/ui/select-icon.svg"
                  alt="select dropdown item"
                  data-select-icon)
            ul.select__list
              li.select__item Исследования
              li.select__item Анкеты
              li.select__item Визиты

        .section-content__sorting-wrapper
          ul.section-content__sorting-list
            li.section-content__sorting-item.is--active
              .section-content__sorting-text Активные
              .section-content__sorting-number 4
            li.section-content__sorting-item
              img.section-content__sorting-item-icon(src="images/icons/ui/trash.svg" alt="")
              .section-content__sorting-text Корзина
              .section-content__sorting-number 2

          button.btn.btn-success.btn-rounded
            img.btn__icon(src="images/icons/ui/plus.svg" alt="")
            | Добавить


        .table.section-content__table
          ul.table-header__list
            li.table__row.table__row-checkbox
              input.checkbox(type="checkbox")
            li.table__row.table__row-short ID
            li.table__row Название
            li.table__row Представитель
            li.table__row Исследования
            li.table__row

          ul.table-rows__list
            li.table__row.table__row-checkbox
              input.checkbox(type="checkbox")
            li.table__row.table__row-short 17
            li.table__row Хеель Рус ООО
            li.table__row Щавелева О. В.
            li.table__row Лимфомиозот
            li.table__row.table__row-actions
              img(src="images/icons/eye.svg" alt="" data-draft)
              img(src="images/icons/menu-dotted.svg" alt="" data-menu-dotted)
          ul.table-rows__list
            li.table__row.table__row-checkbox
              input.checkbox(type="checkbox")
            li.table__row.table__row-short 16
            li.table__row АКРИХИН АО
            li.table__row Сепкина Е. М.
            li.table__row BRAWO
            li.table__row.table__row-actions
              img(src="images/icons/eye.svg" alt="" data-draft)
              img(src="images/icons/menu-dotted.svg" alt="" data-menu-dotted)
          ul.table-rows__list
            li.table__row.table__row-checkbox
              input.checkbox(type="checkbox")
            li.table__row.table__row-short 15
            li.table__row Сентисс Рус ООО
            li.table__row Сумакова И.
            li.table__row Опрос врачей, I этап; Опрос врачей, II этап
            li.table__row.table__row-actions
              img(src="images/icons/eye.svg" alt="" data-draft)
              img(src="images/icons/menu-dotted.svg" alt="" data-menu-dotted)
          ul.table-rows__list
            li.table__row.table__row-checkbox
              input.checkbox(type="checkbox")
            li.table__row.table__row-short 14
            li.table__row ООО НПФ МАТЕРИА 
              br
              | МЕДИКА ХОЛДИНГ
            li.table__row Синицын C.
            li.table__row Клинические случаи; ПАРУС
            li.table__row.table__row-actions
              img(src="images/icons/eye.svg" alt="" data-draft)
              img(src="images/icons/menu-dotted.svg" alt="" data-menu-dotted)


          .table-footer
            .table-footer__panel
              .select(data-select)
                .select__current
                  span.select__current-text Действия
                  .btn-dropdown__icon
                    img(src="images/icons/ui/select-icon.svg"
                      alt="select dropdown item"
                      data-select-icon)
                ul.select__list
                  li.select__item Открыть
                  li.select__item Изменить
                  li.select__item Удалить

              .btn.btn-success.btn-rounded.btn-narrow Применить

            .table-footer__panel
              .table-footer__panel-label Показать
              .select(data-select)
                .select__current
                  span.select__current-text 10
                  .btn-dropdown__icon
                    img(src="images/icons/ui/select-icon.svg"
                      alt="select dropdown item"
                      data-select-icon)
                ul.select__list
                  li.select__item 5
                  li.select__item 10
                  li.select__item 20
                  li.select__item 50
              .table-footer__panel-label строк

  include pug/includes/footer
